<p id="notice"><%= notice %></p>

<h1><%= t("activerecord.models.contact") %></h1>

<%= link_to t("app.new", name: t("activerecord.models.contact")), new_contact_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.contact.name") %></th>
      <th><%= t("activerecord.attributes.contact.birthdate") %></th>
      <th><%= t("activerecord.attributes.contact.address") %></th>
      <th><%= t("activerecord.attributes.contact.email") %></th>
      <th><%= t("activerecord.attributes.contact.cellphone") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.birthdate %></td>
        <td><%= contact.address %></td>
        <td><%= contact.email %></td>
        <td><%= contact.cellphone %></td>
        <td><%= link_to t('app.show'), contact, class: "btn btn-primary" %></td>
        <td><%= link_to t('app.edit'), edit_contact_path(contact),  class: "btn btn-primary" %></td>
        <td><%= link_to t('app.destroy'), contact,  class: "btn btn-danger", method: :delete, data: {
          confirm: t('app.messages.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @contacts %>

<br>

<%= link_to t("app.new", name: t("activerecord.models.contact")), new_contact_path, class: "btn btn-primary" %>
